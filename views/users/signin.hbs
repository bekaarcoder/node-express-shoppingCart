<div class="row justify-content-center mt-5">
	<div class="col-md-6">
		{{#if hasErrors}}
			<div class="alert alert-danger">
				{{#each errors}}
					<p>{{this}}</p>
				{{/each}}
			</div>
		{{/if}}
		<div class="card">
			<div class="card-body">
				<h4 class="mb-3">SignIn Here</h4>
				<form method="post" action="/user/signin">
					<div class="form-group">
						<label for="email">Email</label>
						<input type="text" name="email" class="form-control" placeholder="Enter your email" value="{{formData.email}}">
					</div>
					<div class="form-group">
						<label for="password">Password</label>
						<input type="password" name="password" class="form-control" placeholder="Enter you password">
						<small id="passwordHelp" class="form-text text-muted">Password must be more that 8 characters</small>
					</div>
					<input type="hidden" name="_csrf" value="{{csrfToken}}">
					<button type="submit" class="btn btn-primary">Sign In</button>
				</form>
			</div>
		</div>
	</div>
</div>