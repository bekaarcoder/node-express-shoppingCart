<h3>Checkout</h3>
<div class="row justify-content-center">
	<div class="col-md-6">
		<div class="alert alert-danger d-none" role="alert" id="alert"></div>
		<div class="card">
			<div class="card-body">
				<h4>Your cart total: Rs.{{totalPrice}}</h3>
				<form method="post" action="/checkout" id="checkout-form">
					<div class="form-group">
						<label for="name">Name</label>
						<div id="name">
							<input type="text" name="name" class="form-control" placeholder="Enter your name">
						</div>
					</div>
					<div class="form-group">
						<label for="address">Address</label>
						<div id="address">
							<input type="text" name="address" class="form-control" placeholder="Enter your address">
						</div>
					</div>
					<div class="form-group">
						<label for="holderName">Card Holder Name</label>
						<div id="holderName">
							<input type="text" name="holderName" class="form-control" placeholder="Card Holder Name">
						</div>
					</div>
					<div class="form-group">
						<label for="cardNumber">Credit Card Number</label>
						<div id="cardNumber" class="form-control"></div>
						<div class="invalid-feedback" id="cardNumber-error"></div>
					</div>
					<div class="form-group">
						<label for="cardExpiry">Expiration Year</label>
						<div id="cardExpiry" class="form-control"></div>
						<div class="invalid-feedback" id="cardExp-error"></div>
					</div>
					<div class="form-group">
						<label for="cvc">CVC</label>
						<div id="cvc" class="form-control">
							<div class="invalid-feedback" id="cvc-error"></div>
						</div>
					</div>
				<button type="submit" class="btn btn-success">Buy Now</button>
			</form>
		</div>
	</div>
</div>
</div>
<script type="text/javascript" src="https://js.stripe.com/v3/"></script>
<script type="text/javascript" src="javascripts/checkout.js"></script>